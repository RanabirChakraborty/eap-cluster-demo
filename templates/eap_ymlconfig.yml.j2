wildfly-configuration:
  system-property:
    JBOSS_ID:
      value: {{ inventory_hostname }}        
  subsystem:
    modcluster:
      proxy:
        default:
          proxies:
            - wildfly-cluster-demo-1
          advertise: false
          listener: ajp
    jgroups:
      stack:
        tcpping:
          transport:
            TCP:
              socket-binding: jgroups-tcp
          protocol:
            TCPPING:
              socket-bindings:
                {{ eap_cluster_nodes | map(attribute='address') }}
              properties:
                initial_hosts: "{{ eap_cluster_nodes | map(attribute='inventory_host') | join (',') }}"
                port_range: 0
            MERGE3:
            FD_SOCK:
            FD_ALL:
            VERIFY_SUSPECT:
            pbcast.NAKACK2:
            UNICAST3:
            pbcast.STABLE:
            pbcast.GMS:
            MFC:
            FRAG3:
      channel:
        ee:
          stack: tcpping